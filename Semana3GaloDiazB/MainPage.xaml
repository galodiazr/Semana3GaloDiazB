<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana3GaloDiazB.MainPage">

    <StackLayout>
        <Label Text="Esta es la ventana 1" TextColor="White"></Label>
        <Entry x:Name="txtUser"
               Placeholder="Ingrese el usuario"></Entry>
        <Entry x:Name="txtPass"
               Placeholder="Ingrese la clave"
               IsPassword="True"></Entry>
        <Entry x:Name="ErrorLabel" IsReadOnly="True"></Entry>

        <Button x:Name="btnAbrir_ventana_dos"
                Text="Abrir ventana 2"
                Clicked="btnAbrir_ventana_dos_Clicked"></Button>
    </StackLayout>

</ContentPage>
